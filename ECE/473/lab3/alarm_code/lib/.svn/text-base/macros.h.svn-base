#ifndef MACROS
#define MACROS

/******************************************************
 * Checks to see if the given bit is set.
 ******************************************************/
#define ISSET(byte, bit) (byte & (1 << bit))

/******************************************************
 * Sets the given bit.
 ******************************************************/
#define SETBIT(byte, bit) (byte |= (1 << bit))

/******************************************************
 * Clears the given bit.
 ******************************************************/
#define CLRBIT(byte, bit) (byte &= ~(1 << bit))

#endif
